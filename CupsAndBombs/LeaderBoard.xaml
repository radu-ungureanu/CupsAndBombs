    xmlns:local="using:CupsAndBombs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/mainpagebackground.jpg"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Height="82" Margin="120,34,0,0" TextWrapping="Wrap" Text="Leader Board" VerticalAlignment="Top" Width="280" FontSize="48" FontFamily="Chiller"/>
        <Button x:Name="backButton" Click="GoBack" Style="{StaticResource BackButtonStyle}" Margin="36,36,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <ListView IsEnabled="False" Name="leaderBoardList"  HorizontalAlignment="Left" Height="518" Margin="122,148,0,0" VerticalAlignment="Top" Width="1008"/>
